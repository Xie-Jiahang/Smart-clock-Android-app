<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp">
            <!-- ListView 由item.xml里的TextView给值 。-->
            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/listview"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:divider="@null"
                android:layoutAnimation="@anim/anim_listview_item"
                android:scrollbars="none">

            </ListView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnTimePickerDialog1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="设置"
                android:textColor="#DEB887"
                android:textSize="20dp" />
            <Button
                android:id="@+id/alarm_music"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnTimePickerDialog1"
                android:layout_alignLeft="@+id/btnTimePickerDialog1"
                android:layout_marginLeft="0dp"
                android:text="音乐"
                android:textColor="#DEB887"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/alarm_music"
            android:text="音量设置"
            android:textColor="#DEB887" />

        <SeekBar
            android:id="@+id/editvolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/alarm_music"
            android:max="3"
            android:maxHeight="8dp"
            android:progress="2" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>