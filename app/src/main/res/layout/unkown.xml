<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:id="@+id/rl_top_bar">
        <!-- 下面两个是用来给  activity_main.xml里的ListView赋值,-->
        <TextView
            android:id="@+id/Textviewname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/palevioletred"
            android:focusable="false"
            android:text="1"
            android:textSize="24sp" />
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumb="@drawable/switch_custom_thumb_selector"
            android:track="@drawable/switch_custom_track_selector"
            android:id="@+id/Textviewstate"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/Textviewname"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:id="@+id/ll_app_expand">

        <com.example.newapp.EasyPickerView
            android:id="@+id/epv_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            custom:epvMaxShowNum="3"
            custom:epvRecycleMode="true"
            custom:epvTextColor="#4aa4a4"
            custom:epvTextMaxScale="2.0"
            custom:epvTextMinAlpha="0.35"
            custom:epvTextPadding="10dp"
            custom:epvTextSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="70dp"
            android:text="h"
            android:textColor="#4aa4a4"
            android:textSize="20sp" />

        <com.example.newapp.EasyPickerView
            android:id="@+id/epv_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            custom:epvMaxShowNum="3"
            custom:epvRecycleMode="true"
            custom:epvTextColor="#e98d3c"
            custom:epvTextMaxScale="2.0"
            custom:epvTextMinAlpha="0.35"
            custom:epvTextPadding="10dp"
            custom:epvTextSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="70dp"
            android:text="min"
            android:textColor="#e98d3c"
            android:textSize="20sp" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="@color/palevioletred"
            android:background="@drawable/btnbg"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:id="@+id/sleep_mode1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="起\n始\n时\n间"
            android:textColor="@color/palevioletred"/>

        <com.example.newapp.EasyPickerView
            android:id="@+id/epv_h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            custom:epvMaxShowNum="3"
            custom:epvRecycleMode="true"
            custom:epvTextColor="#4aa4a4"
            custom:epvTextMaxScale="2.0"
            custom:epvTextMinAlpha="0.35"
            custom:epvTextPadding="10dp"
            custom:epvTextSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="h"
            android:textColor="#4aa4a4"
            android:textSize="20sp" />

        <com.example.newapp.EasyPickerView
            android:id="@+id/epv_m1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            custom:epvMaxShowNum="3"
            custom:epvRecycleMode="true"
            custom:epvTextColor="#e98d3c"
            custom:epvTextMaxScale="2.0"
            custom:epvTextMinAlpha="0.35"
            custom:epvTextPadding="10dp"
            custom:epvTextSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="min"
            android:textColor="#e98d3c"
            android:textSize="20sp" />

        <Button
            android:id="@+id/confirm1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="@color/palevioletred"
            android:background="@drawable/btnbg"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:id="@+id/sleep_mode2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="结\n束\n时\n间"
            android:textColor="@color/palevioletred"/>

        <com.example.newapp.EasyPickerView
            android:id="@+id/epv_h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            custom:epvMaxShowNum="3"
            custom:epvRecycleMode="true"
            custom:epvTextColor="#4aa4a4"
            custom:epvTextMaxScale="2.0"
            custom:epvTextMinAlpha="0.35"
            custom:epvTextPadding="10dp"
            custom:epvTextSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="h"
            android:textColor="#4aa4a4"
            android:textSize="20sp" />

        <com.example.newapp.EasyPickerView
            android:id="@+id/epv_m2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            custom:epvMaxShowNum="3"
            custom:epvRecycleMode="true"
            custom:epvTextColor="#e98d3c"
            custom:epvTextMaxScale="2.0"
            custom:epvTextMinAlpha="0.35"
            custom:epvTextPadding="10dp"
            custom:epvTextSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="min"
            android:textColor="#e98d3c"
            android:textSize="20sp" />

        <Button
            android:id="@+id/confirm2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="@color/palevioletred"
            android:background="@drawable/btnbg"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_app_expand_extra3">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/listview"
            android:layout_marginTop="10dp"
            android:textColor="@color/palevioletred"
            android:text="事项1"/>
        <EditText
            android:id="@+id/edittext1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/text1"
            android:hint="输入日程"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_app_expand_extra4">
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/palevioletred"
            android:text="事项2"/>
        <EditText
            android:id="@+id/edittext2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/text2"
            android:hint="输入日程"/>
    </RelativeLayout>

</LinearLayout>